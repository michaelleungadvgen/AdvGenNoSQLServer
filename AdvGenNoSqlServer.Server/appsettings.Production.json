{
  "Server": {
    "Host": "0.0.0.0",
    "Port": 9090,
    "MaxConnections": 10000,
    "ConnectionTimeout": 30000,
    "KeepAliveInterval": 60000,
    "ReceiveBufferSize": 262144,
    "SendBufferSize": 262144
  },
  "Security": {
    "EnableSSL": true,
    "CertificatePath": "/etc/nosql-server/cert.pfx",
    "CertificatePassword": "",
    "RequireAuthentication": true,
    "AllowedAuthMethods": ["JWT"],
    "SessionTimeout": 3600000,
    "MaxFailedAttempts": 3,
    "LockoutDuration": 3600000
  },
  "Storage": {
    "DataPath": "/var/lib/nosql-server/data",
    "MaxFileSize": 1073741824,
    "CompressionEnabled": true,
    "CompressionLevel": "optimal",
    "PersistenceMode": "fsync",
    "IndexCacheSize": 1073741824
  },
  "Transaction": {
    "DefaultIsolationLevel": "Serializable",
    "DefaultTimeout": 30000,
    "MaxConcurrentTransactions": 5000,
    "DeadlockDetection": true,
    "EnableWAL": true,
    "WALFlushInterval": 500
  },
  "Cache": {
    "Enabled": true,
    "MaxSize": 1073741824,
    "MaxItemCount": 100000,
    "EvictionPolicy": "LRU",
    "DefaultTTL": 3600000,
    "EnableDistributed": false
  },
  "Logging": {
    "Level": "Warning",
    "EnableFileLogging": true,
    "LogPath": "/var/log/nosql-server",
    "MaxLogFileSize": 104857600,
    "MaxLogFiles": 10,
    "EnableConsoleLogging": false,
    "EnableAuditLogging": true
  },
  "Performance": {
    "MaxQueryTimeout": 60000,
    "EnableQueryOptimization": true,
    "BatchSize": 5000,
    "ThreadPoolMinThreads": 16,
    "ThreadPoolMaxThreads": 256,
    "GCMode": "Server"
  }
}
